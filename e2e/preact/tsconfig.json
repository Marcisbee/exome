{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "DOM",
      "es2015"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "jsx": "react",
    "paths": {
      "exome": [
        "../../src/exome.ts"
      ],
      "exome/preact": [
        "../../src/preact.ts"
      ]
    },
    "allowJs": true
  }
}
