{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "DOM",
      "es2015"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "paths": {
      "exome": [
        "../../src/index.ts"
      ],
      "exome/preact": [
        "../../src/preact.ts"
      ]
    },
    "allowJs": true
  }
}
