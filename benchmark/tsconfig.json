{
  "compilerOptions": {
    "target": "ES2017",
    "module": "esnext",
    "lib": [
      "DOM",
      "es2015"
    ],
    "moduleResolution": "node",
    "outDir": "ts-dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "allowJs": true,
    "experimentalDecorators": true
  }
}
