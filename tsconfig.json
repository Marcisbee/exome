{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": [
            "DOM",
            "es2015"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "paths": {
            "exome": [
                "./src/exome.ts"
            ],
            "exome/ghost": [
                "./src/ghost.ts"
            ]
        },
				"allowImportingTsExtensions": true,
				"noEmit": true,
        "allowJs": true
    },
    "include": [
				"mod.ts",
        "src/**/*"
    ],
    "exclude": [
        "src/**/*.test.ts"
    ]
}
