{
	"compilerOptions": {
		"rootDir": "src",
		"target": "es6",
		"module": "commonjs",
		"lib": ["DOM", "es2015"],
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"jsx": "react",
		"paths": {
			"exome": ["./src/exome.ts"],
			"exome/ghost": ["./src/ghost.ts"]
		},
		"resolveJsonModule": true,
		"allowImportingTsExtensions": true,
		"allowJs": true,
		"typeRoots": ["node_modules/@types", "types"]
	},
	"include": ["src/**/*"],
	"exclude": ["src/**/*.test.ts"]
}
